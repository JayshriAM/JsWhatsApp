<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.jswhatsapp">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/whatsapp_icon"
        android:label="@string/app_name"
        android:roundIcon="@drawable/whatsapp_round_icon"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activities.PhoneAuthActivity"></activity>
        <activity android:name=".activities.SignUpActivity"></activity>
        <activity android:name=".activities.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.ChatScreenActivity"
            android:theme="@style/WithActionBarTheme" />
        <activity android:name=".activities.CallsActivity" />
        <activity android:name=".activities.StatusActivity" />
        <activity android:name=".activities.ChatsActivity" />
        <activity
            android:name=".MainActivity"
            android:theme="@style/Theme.MaterialComponents.NoActionBar"></activity>
    </application>

</manifest>